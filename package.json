{
  "name": "crypto-coin-strategy-builder-v3",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "src/domain"
  ],
  "scripts": {
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "build": "tsc -p tsconfig.json",
    "start": "tsx src/app/cli.ts",
    "serve": "tsx src/server.ts",
    "cf:build": "tsc -p tsconfig.json",
    "cf:dev": "wrangler dev",
    "cf:deploy": "wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "build-start": "npm run build && npm run start",
    "deploy:local": "./scripts/deploy-local.sh",
    "deploy:uat": "./scripts/deploy-uat.sh",
    "deploy:prod": "./scripts/deploy-prod.sh",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250823.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^2.0.5",
    "better-sqlite3": "^11.7.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "tsx": "^4.19.2",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "@sentry/node": "^10.5.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "helmet": "^8.0.0",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  }
}
